<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin">

        <ImageView
            android:id="@+id/img_contact_photo"
            android:layout_width="@dimen/main.contact.photo_size"
            android:layout_height="@dimen/main.contact.photo_size"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_contact_photo"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_toEndOf="@+id/img_contact_photo"
            android:text="Contact name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</android.support.v7.widget.CardView>